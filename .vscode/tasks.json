{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "ng serve",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "node app.js",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            }
        },
        {
            "label": "Start Storybook",
            "type": "shell",
            "command": "npm run storybook",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        }
    ]
}